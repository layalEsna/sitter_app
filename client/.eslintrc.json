{
    "parser": "@babel/eslint-parser",
    "extends": [
        "react-app",
        "plugin:flowtype/recommended"
    ],
    "plugins": [
        "flowtype"
    ],
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 12,  // Adjust based on your requirements (e.g., 2020, 2021)
        "sourceType": "module"
    },
    "rules": {
        // You can add specific ESLint rules to override here, for example:
        // "no-console": "warn",
        // "react/prop-types": "off"
    }
}
